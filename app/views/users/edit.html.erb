<h1>Edit Profile</h1>

<%= form_tag user_profile_path(@user), method: :put do  %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @user.name %>

    <%= label_tag :address %>
    <%= text_field_tag :address, @user.address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, @user.city %>

    <%= label_tag :state %>
    <%= text_field_tag :state, @user.state %>

    <%= label_tag :zip %>
    <%= number_field_tag :zip, @user.zip %>

    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag "Update Profile" %>
<% end %>
