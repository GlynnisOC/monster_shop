<% @merchants.each do |merchant| %>
  <section id='merchant-<%= merchant.id %>'>
    <h2><% if current_admin? %>
        <%= link_to merchant.name, admin_merchants_show_path(merchant) %>
      <% else %>
        <%= link_to merchant.name, "/merchants/#{merchant.id}" %>
      <% end %></h2>
    <h2><%= merchant.city %></h2>
    <h2><%= merchant.state %></h2>
  </section>
<% end %>
