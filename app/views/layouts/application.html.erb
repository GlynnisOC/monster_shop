<!DOCTYPE html>
<html>
  <head>
    <title>MonsterShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>

      <% if current_user.nil? %>
        <%= link_to 'Register', register_path %>
        <%= link_to 'Login', login_path %>
      <% end %>

      <% if !current_admin? %>
        <%= link_to 'Merchants', '/merchants' %>
      <% end %>

      <%= link_to 'Items', '/items' %>

      <% if current_admin? %>
        <%= link_to 'Merchants', admin_merchants_path %>
      <% end %>

      <% if current_registered_user? %>
        <%= link_to 'Profile', profile_path %>
      <% end %>


      <% if current_merchant_admin? || current_merchant_user? %>
        <%= link_to 'Merchant Dashboard', merchant_dashboard_path %>
      <% end %>

      <% if !current_user.nil? && current_admin?  %>
        <%= link_to "Admin Dashboard", admin_dashboard_path %>
        <%= link_to "All Users", admin_all_users_path %>
      <% end %>
      
      <% if current_merchant_admin? %>
      <%= link_to 'My Items', merchant_items_index_path %>
      <% end %>

      <% if !current_user.nil? %>
        <%= link_to 'Logout', logout_path %>
      <% end %>

      <% unless current_merchant_admin? || current_admin? %>
        <%= link_to "Cart: #{cart.count}", cart_path %>
      <% end %>



   </nav>
    <% flash.each do |type, message| %>
    <p><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
