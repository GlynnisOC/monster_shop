<h1>All Items</h1>

<% @items.each do |item| %>
  <section id='item-<%= item.id%>'>
    <h2><%= link_to item.name, "/items/#{item.id}" %></h2>
    <p><%= item.description %></p>
    <%= link_to item_path(item) do %>
      <%= image_tag(item.image, onerror: 'this.error=null;this.src="https://i.ya-webdesign.com/images/giants-drawing-ogre-12.png"') %>
    <% end %>
    <p>Price: <%= number_to_currency(item.price) %></p>
    <p>Sold by: <%= link_to item.merchant.name, "/merchants/#{item.merchant_id}" %>, Inventory: <%= item.inventory %></p>
    <p><%= item.active ? "Active" : "Inactive" %></p>
  </section>
<% end %>

<section class="item_stats">
  <h3>Top 5 Items</h3>
  <% @top_five.map do |item| %>
    <h4><%= item.name %></h4>
    <h5>Quantity Ordered: <%= item.total_quantity %></h5>
  <% end %>

  <h3>Least Purchased 5 Items</h3>
  <% @bottom_five.map do |item| %>
    <h4><%= item.name %></h4>
    <h5>Quantity Ordered: <%= item.total_quantity %></h5>
  <% end %>
</section>
